{
"update_url": "https://clients2.google.com/service/update2/crx",

    "version": "2.1.4",
    "name": "CKAuthenticator",
    "manifest_version": 2,
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "img/ckauth19x.png",
        "default_popup": "popup.html"
    },
    "description": "ContentKeeper Authenticator",
    "icons": {
        "128": "img/ckauth19x.png",
        "16": "img/ckauth19x.png",
        "32": "img/ckauth19x.png",
        "48": "img/ckauth19x.png"
    },
    "offline_enabled": true,
    "permissions": ["webRequest", "identity", "identity.email", "https://*/*", "http://*/*", "<all_urls>" ],

    "web_accessible_resources": [ "img/ckauth19x.png" ]
}